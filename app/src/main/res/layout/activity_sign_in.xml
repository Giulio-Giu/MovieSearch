<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.activities.MainActivity">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:focusableInTouchMode="true">

        <ImageView
                android:id="@+id/iv_signIn_logo"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/omdb_icon" />

        <TextView
                android:id="@+id/tv_signIn_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_signIn_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/robotomedium"
                android:text="@string/title"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp" />

        <EditText
                android:id="@+id/et_signIn_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_signIn_title"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/robotoregular"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textSize="15sp" />

        <EditText
                android:id="@+id/et_signIn_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_signIn_email"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/robotoregular"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textSize="15sp" />

        <TextView
                android:id="@+id/tv_signIn_wrong_credentials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_signIn_password"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:text="@string/wrong_credentials"
                android:textColor="@color/dark_red"
                android:textSize="16sp"
                android:visibility="invisible" />

        <Button
                android:id="@+id/signIn_btn_signIn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@id/et_signIn_password"
                android:layout_marginTop="60dp"
                android:background="@drawable/button_green"
                android:fontFamily="@font/robotoregular"
                android:text="@string/btn_signIn"
                android:textAllCaps="false"
                android:textColor="@color/textGrayUltraLight"
                android:textSize="15sp" />

        <Button
                android:id="@+id/signIn_btn_signUp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/signIn_btn_signIn"
                android:layout_marginTop="29dp"
                android:background="@drawable/button_blue"
                android:text="@string/btn_doSignUp"
                android:textAllCaps="false"
                android:textColor="@color/textGrayUltraLight"
                android:textSize="15sp" />

    </RelativeLayout>

</RelativeLayout>